{
  "swagger": "2.0",
  "info": {
    "title": "Car rental API",
    "description": "\n      A RESTful Car Rental API that allows users to register, authenticate, and rent cars\nfrom different locations. The system supports role-based access control with\nadmin and user roles. Admins can manage users and rental locations, while\nauthenticated users can browse locations and perform rental-related operations.\nAuthentication is handled using JWT Bearer tokens.\n    ",
    "version": "1.0.0"
  },
  "host": "localhost:4400",
  "schemes": ["http"],
  "securityDefinitions": {
    "BearerAuth": {
      "type": "apiKey",
      "name": "authorization",
      "in": "header",
      "description": "Authorization needed, Enter: Bearer<token>"
    }
  },
  "security": [
    {
      "BearerAuth": []
    }
  ],
